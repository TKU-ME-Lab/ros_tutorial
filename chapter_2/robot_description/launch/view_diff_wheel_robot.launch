<launch>
  <arg name = "model"/>
  <param name = "robot_description" textfile = "$(find robot_description)/urdf/diff_wheeled_robot.urdf"/>
  <param name = "use_gui" value = "true"/>

  <node name = "joint_state_publisher" pkg = "joint_state_publisher" type = "joint_state_publisher"/>
  <node name = "robot_state_publisher" pkg = "robot_state_publisher" type = "state_publisher"/>

  <node name = "rviz" pkg = "rviz" type = "rviz" args = "-d $(find robot_description)/launch/view_diff_wheel_robot.rviz" required = "true"/>
</launch>
